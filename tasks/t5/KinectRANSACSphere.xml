<?xml version="1.0" encoding="utf-8"?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Tomasz Kornuta</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>Task performing plane detection</brief>
			<full>Performs detection of a sphere with the use of RANSAC, displays two resulting clouds: inliers and outliers</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="0.3">
				<Component name="Source" type="CameraNUI:CameraNUI" priority="1" bump="0">
					<param name="sync">1</param>
				</Component>

				<Component name="Converter" type="PCL:DepthConverter" priority="2" bump="0">
				</Component>

				<Component name="RANSAC" type="PCL:RANSACSphere" priority="3" bump="0">
				</Component>
			</Executor>
		</Subtask>
		
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.5">
				<Component name="Viewer" type="PCL:MultiXYZCloudsViewer" priority="1" bump="0">
					<param name="title">XYZ point cloud with inliers forming a sphere (blue) and outliers (white)</param>
					<param name="count">2</param>
					<param name="clouds_colours"> 0 0 255; 255 255 255</param>
				</Component>
			</Executor>
		</Subtask>
	</Subtasks>
	
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Source.out_depth">
			<sink>Converter.in_depth</sink>
		</Source>		
		<Source name="Source.out_camera_info">
			<sink>Converter.in_camera_info</sink>	
		</Source>
		<Source name="Converter.out_cloud_xyz">
			<sink>RANSAC.in_pcl</sink>
		</Source>
		<Source name="RANSAC.out_inliers">
			<sink>Viewer.in_cloud_xyz0</sink>
		</Source>
		<Source name="RANSAC.out_outliers">
			<sink>Viewer.in_cloud_xyz1</sink>
		</Source>
	</DataStreams>
</Task>




