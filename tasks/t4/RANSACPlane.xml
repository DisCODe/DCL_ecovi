<?xml version="1.0" encoding="utf-8"?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Maciej Stefa≈Ñczyk</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>Simple PCL viewer</brief>
			<full>Simple PCL viewer, using PCD as source of depth data.</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="0.1">
				<Component name="Source" type="PCL:PlaneGenerator" priority="1" bump="0">
				</Component>
				<Component name="RANSAC" type="PCL:RANSACPlane" priority="1" bump="0">
				</Component>
			</Executor>
		</Subtask>
		
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.01">
				<Component name="GeneratedCloud" type="PCL:CloudViewer" priority="1" bump="0"/>
				<Component name="PlaneCloud" type="PCL:CloudViewer" priority="1" bump="0"/>
			</Executor>
		</Subtask>
	
	</Subtasks>
	
	<!-- connections between events and handelrs -->
	<Events>
	</Events>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Source.out_pcl">
			<sink>RANSAC.in_pcl</sink>
			<sink>GeneratedCloud.in_cloud_xyz</sink>
		</Source>
		<Source name="RANSAC.out_inliers">
			<sink>PlaneCloud.in_cloud_xyz</sink>
		</Source>
	</DataStreams>
</Task>




