<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Tomasz Kornuta</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>Image Blurer</brief>
			<full>Task performing the bluring of images loaded from the sequence</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="1">
				<Component name="Source" type="CvBasic:Sequence" priority="1" bump="1">
					<param name="sequence.directory">%[TASK_LOCATION]%/../../../data/opencv_classics/</param>
					<param name="sequence.pattern">.*\.jpg</param>
					<param name="mode.loop">1</param>
					<param name="mode.iterate">0</param>
				</Component>
				
				<Component name="GaussianBlur" type="CvBasic:CvGaussianBlur" priority="1" bump="0">
					<param name="kernel.width">0</param>
					<param name="kernel.height">0</param>
					<param name="sigma.x">5.001</param>
					<param name="sigma.y">5.001</param>
				</Component>
			</Executor>
		</Subtask>
		
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.2">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">1</param>
					<param name="title">Okienko</param>
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Source.out_img">
			<sink>GaussianBlur.in_img</sink>		
		</Source>
		<Source name="GaussianBlur.out_img">
			<sink>Window.in_img</sink>		
		</Source>
	</DataStreams>
</Task>




