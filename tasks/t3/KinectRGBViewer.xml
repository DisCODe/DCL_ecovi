<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Tomasz Kornuta</name>
			<link></link>
		</Author>
	
		<Description>
			<brief>ecovi:t3/KinectRGBViewer</brief>
			<full>Displays RGB images retrieved from the Kinect</full>
		</Description>
	</Reference>

	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1" period="0.0">
				<Component name="Source" type="CameraNUI:CameraNUI" priority="1" bump="0">
					<param name="lib">freenect</param>
					<param name="skip_stop">1</param>
					<param name="camera_mode">rgb</param>
					<param name="sync">1</param>
				</Component>
			</Executor>
		</Subtask>
			
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.05">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">1</param>
					<param name="save.directory">%[TASK_LOCATION]%/../../data/matching/</param>
					<param name="title">Window</param>
				</Component>
			</Executor>
		</Subtask>
	</Subtasks>
	
	<!-- connections between events and handelrs -->
	<Events>
	</Events>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Source.out_img">
			<sink>Window.in_img</sink>
		</Source>
	</DataStreams>
</Task>

