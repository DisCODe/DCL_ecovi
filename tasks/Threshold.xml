<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Maciej Stefa≈Ñczyk</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>ecovi:Threshold</brief>
			<full>Example of image thresholding</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="1">
				<Component name="Sequence" type="CvBasic:Sequence" priority="1" bump="1">
					<param name="sequence.directory">%[TASK_LOCATION]%/../../../data/calibration_opencv/</param>
					<param name="sequence.pattern">.*\.jpg</param>
					<param name="mode.loop">1</param>
					<param name="mode.iterate">0</param>
				</Component>
				
				<Component name="Processor" type="CvBasic:CvThreshold" priority="2" bump="0">
				</Component>
			</Executor>
		</Subtask>
		
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.2">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">1</param>
					<param name="title">Okienko</param>
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Sequence.out_img">
			<sink>Processor.in_img</sink>		
		</Source>
		<Source name="Processor.out_img">
			<sink>Window.in_img</sink>		
		</Source>
	</DataStreams>
</Task>




