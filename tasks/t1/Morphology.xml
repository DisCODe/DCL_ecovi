<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Tomasz Kornuta</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>ecovi:t1/Morphology</brief>
			<full>Task performing the morphological operations on the images loaded from the sequence</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Main">
			<Executor name="Processing"  period="1">
				<Component name="Sequence" type="CvBasic:Sequence" priority="1" bump="1">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/calibration_opencv/</param>
					<param name="sequence.pattern">.*\.jpg</param>
					<param name="mode.loop">1</param>
					<param name="mode.iterate">0</param>
				</Component>
				
				<Component name="Morphology" type="CvBasic:CvMorphology" priority="2" bump="0">
				</Component>
			</Executor>

			<Executor name="Visualization" period="0.2">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">1</param>
					<param name="title">Okienko</param>
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Sequence.out_img">
			<sink>Morphology.in_img</sink>		
		</Source>
		<Source name="Morphology.out_img">
			<sink>Window.in_img</sink>		
		</Source>
	</DataStreams>
</Task>




