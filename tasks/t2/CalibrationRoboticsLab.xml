<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Maciej Stefa≈Ñczyk, Tomasz Kornuta</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>ecovi:t2/CalibrationRoboticsLab</brief>
			<full>Task for calibration of the camera basing on the image dataset acquired from the one of our cameras</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="0.1">
				<Component name="Source" type="CvBasic:Sequence" priority="1" bump="0">
					<param name="sequence.pattern">.*\.jpeg</param>
					<param name="sequence.directory">%[TASK_LOCATION]%/../../data/calibration_robotics_lab/</param>
					<param name="mode.loop">0</param>
					<param name="mode.auto_next_image">0</param>
				</Component>
								
				<Component name="CameraInfo" type="CvCoreTypes:CameraInfoProvider" priority="2">
					<param name="width">768</param>
					<param name="height">576</param>
					<param name="camera_matrix">1 0 384 ; 0 1 288 ; 0 0 1</param>
					<param name="dist_coeffs">0 0 0 0 0 0 0 0</param>
				</Component>
				
				<Component name="Undistort" type="CvBasic:CvUndistort" priority="3" bump="0">
				</Component>
				
				<Component name="ColorConv" type="CvBasic:CvColorConv" priority="4" bump="0">
					<param name="type">BGR2GRAY</param>
				</Component>
				
				<Component name="Chessboard" type="CvBasic:CvFindChessboardCorners" priority="5" bump="0">
					<param name="chessboard.board_width">8</param>
					<param name="chessboard.board_height">6</param>
					<param name="chessboard.square_width">0.024</param>
					<param name="chessboard.square_height">0.024</param>
				</Component>
				
				<Component name="Calib" type="CvBasic:Calib" priority="6" bump="0">
					
				</Component>
				
			</Executor>
		</Subtask>
		
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.2">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">1</param>
					<param name="count">2</param>
					<param name="title">Original,Undistorted</param>
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Source.out_img">
			<sink>Undistort.in_img</sink>		
			<sink>ColorConv.in_img</sink>
			<sink>Window.in_img0</sink>		
		</Source>
		<Source name="CameraInfo.out_camera_info">
			<sink>Undistort.in_camera_info</sink>
			<sink>Calib.in_camera_info</sink>
		</Source>

		<Source name="ColorConv.out_img">
			<sink>Chessboard.in_img</sink>
		</Source>
		<Source name="Chessboard.out_chessboard">
			<sink>Window.in_draw0</sink>
			<sink>Calib.in_object3d</sink>		
		</Source>
		<Source name="Calib.out_camera_info">
			<sink>CameraInfo.in_camera_info</sink>
		</Source>
		<Source name="Undistort.out_img">
			<sink>Window.in_img1</sink>		
		</Source>
	</DataStreams>
</Task>




