<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Maciej Stefa≈Ñczyk, Tomasz Kornuta</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>ecovi:t2/CalibrationOpenCV</brief>
			<full>Task for calibration of the camera basing on the OpenCV exemplary image dataset</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="1">
				<Component name="Source" type="CvBasic:Sequence" priority="1" bump="0">
					<param name="sequence.pattern">.*\.jpg</param>
					<param name="sequence.directory">%[TASK_LOCATION]%/../../data/calibration_opencv/</param>
					<param name="mode.loop">0</param>
					<param name="mode.iterate">0</param>
				</Component>
								
				<Component name="CameraInfo" type="CvCoreTypes:CameraInfoProvider" priority="2">
					<param name="width">768</param>
					<param name="height">576</param>
					<param name="camera_matrix">1 0 0 ; 0 1 0 ; 0 0 1</param>
					<param name="dist_coeffs">0 0 0 0 0 0 0 0</param>
				</Component>
				
				<Component name="Undistort" type="CvBasic:CvUndistort" priority="3" bump="0">
				</Component>
				
				<Component name="Chessboard" type="CvBasic:CvFindChessboardCorners" priority="4" bump="0">
					<param name="chessboard.width">9</param>
					<param name="chessboard.height">6</param>
					<param name="chessboard.square_width">0.02</param>
					<param name="chessboard.square_height">0.02</param>
				</Component>
				
				<Component name="Calib" type="CvBasic:Calib" priority="4" bump="1">
					
				</Component>
				
			</Executor>
		</Subtask>
		
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.2">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">2</param>
					<param name="title">Original,Undistorted</param>
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Source.out_img">
			<sink>Undistort.in_img</sink>		
			<sink>Chessboard.in_img</sink>
			<sink>Window.in_img0</sink>		
		</Source>
		<Source name="CameraInfo.out_camerainfo">
			<sink>Undistort.in_camerainfo</sink>
			<sink>Calib.in_camerainfo</sink>
		</Source>
		<Source name="Chessboard.out_chessboard">
			<sink>Window.in_draw0</sink>
			<sink>Calib.in_chessboard</sink>		
		</Source>
		<Source name="Calib.out_camerainfo">
			<sink>CameraInfo.in_camerainfo</sink>
		</Source>
		<Source name="Undistort.out_img">
			<sink>Window.in_img1</sink>		
		</Source>
	</DataStreams>
</Task>




